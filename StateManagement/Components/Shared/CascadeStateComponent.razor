<CascadingValue Value="this">
  @ChildContent
</CascadingValue>

@code {
  [Parameter] public RenderFragment ChildContent { get; set; }
  private bool showInCelcius = false;

  public bool ShowInCelcius
  {
    get => showInCelcius;
    set
    {
      if (showInCelcius != value)
      {
        showInCelcius = value;
        StateHasChanged();
      }
    }
  }

}