@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex flex-row justify-content-end gap-3">
            <AuthorizeView>
                <NotAuthorized></NotAuthorized>
                <Authorized>
                    <NavLink href="/Account/UserInfo">@context.User?.Identity?.Name</NavLink>
                    <NavLink href="/Account/Logout">Logout</NavLink>
                </Authorized>
            </AuthorizeView>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

</div>
    <footer>application footer</footer>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
